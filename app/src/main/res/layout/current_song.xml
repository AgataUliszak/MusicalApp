<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin16">

    <ImageView
        android:id="@+id/song_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height300"
        android:padding="@dimen/margin16"
        android:scaleType="centerCrop"
        android:src="@drawable/polish" />

    <TextView
        android:id="@+id/current_song"
        style="@style/TextStyle_1"
        android:layout_margin="@dimen/margin16"
        android:text="current_song" />

    <TextView
        android:id="@+id/current_artist"
        style="@style/TextStyle_1"
        android:paddingBottom="@dimen/margin40"
        android:text="current_artist" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            style="@style/IconStyle"
            android:src="@drawable/ic_skip_previous" />

        <ImageView
            style="@style/IconStyle"
            android:src="@drawable/ic_pause_circle_outline" />

        <ImageView
            style="@style/IconStyle"
            android:src="@drawable/ic_play_circle_outline" />

        <ImageView
            style="@style/IconStyle"
            android:src="@drawable/ic_skip_next" />

    </LinearLayout>
</LinearLayout>